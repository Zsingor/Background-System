<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springtest.mapper.RolesRoutesMapper">
    <insert id="addRoleRoutes">
        insert into test.roles_routes(roleid, routeid)
        values 
        <foreach collection="routeids" item="routeid" separator=",">
            (#{roleid}, #{routeid})
        </foreach>
    </insert>

    <delete id="deleteRouteRoles" parameterType="java.util.List">
        DELETE FROM test.roles_routes WHERE routeid IN
        <foreach item="item" collection="menulist" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>
</mapper>